# Depending on whether this command is run with sudo or not will determine
# whether the user has limited commands with run-in-signaling-namespace as like
# a admin user or unlimited commands.
if [[ $EUID -ne 0 ]]
then
  echo "No sudo: run admin command"  # I will remove this later
  /usr/share/clearwater/bin/run_run-in-signaling-namespace "$@"
else
  echo "sudo called: run super-admin command"  # I will remove this later
  /usr/share/clearwater/bin/run-in-signaling-namespace "$@"
fi
